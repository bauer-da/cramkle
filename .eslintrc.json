{
  "extends": ["prettier", "eslint:recommended"],
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-underscore-dangle": [1, { "allow": ["_id"] }],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": [0]
  }
}
